{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://open-rmf.org/rmf_api_msgs/robot_state/0.1",
  "title": "Robot State",
  "description": "The state of a robot",
  "type": "object",
  "properties": {
    "status": {
      "description": "A simple token representing the status of the robot",
      "type": "string",
      "enum": ["uninitialized", "offline", "idle", "charging", "working", "error"]
    },
    "unix_millis_time": { "type": "integer" },
    "location": { "$ref": "https://open-rmf.org/rmf_api_msgs/location_2D/0.1" },
    "battery": {
      "description": "State of charge of the battery. Values range from 0.0 (depleted) to 1.0 (fully charged)",
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "issues": {
      "description": "A list of issues with the robot that operators need to address",
      "type": "array",
      "items": { "$ref": "#/$defs/issue" }
    },
    "log": {
      "description": "A log of notable events pertaining to the robot",
      "type": "array",
      "items": { "$ref": "https://open-rmf.org/rmf_api_msgs/log_entry/0.1"}
    }
  },
  "$defs": {
    "issue": {
      "description": "An issue that an operator needs to respond to (e.g. stuck, lost)",
      "type": "object",
      "properties": {
        "category": "string",
        "detail": {
          "description": "Detailed information about the issue",
          "anyOf": [
            { "type": "object" },
            { "type": "array" },
            { "type": "string" }
          ]
        }
      }
    }
  }
}
