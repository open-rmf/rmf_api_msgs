{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://open-rmf.org/rmf_api_msgs/skip_phase_response/0.1",
  "title": "Skip Phase Response",
  "description": "Response to a request for a phase to be skipped",
  "type": "object",
  "oneOf": [
    {
      "properties": {
        "success": { "$ref": "#/$defs/success" },
        "token": {
          "description": "A token for the skip request. This token value is unique within this task_id. Use this in a undo_skip_phase_request to cancel this specific skip request.",
          "type": "string"
        }
      },
      "required": ["success", "token"]
    },
    {
      "properties": {
        "success": { "$ref": "#/$defs/failure" },
        "error": {
          "description": "An error message explaining why the skip request failed.",
          "type": "string"
        }
      },
      "required": ["success", "error"]
    }
  ],
  "$defs": {
    "success": {
      "description": "The request was successful",
      "type": "boolean",
      "const": true
    },
    "failure": {
      "description": "The request failed",
      "type": "boolean",
      "const": false
    }
  }
}
