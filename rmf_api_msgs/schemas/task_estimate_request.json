{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/open-rmf/rmf_api_msgs/main/rmf_api_msgs/schemas/task_estimate_request.json",
  "title": "Task Estimate Request",
  "description": "Request to estimate a task for specific robot",
  "type": "object",
  "properties": {
    "type": {
      "description": "Indicate that this is a task dispatch request",
      "type": "string",
      "constant": "task_estimate_request"
    },
    "robot": {
      "description": "The name of the robot",
      "type": "string"
    },
    "fleet": {
      "description": "The fleet the robot belongs to",
      "type": "string"
    },
    "request": {"$ref": "#/$defs/request"}
  },
  "required": ["type", "robot", "fleet"],
  "$defs": {
    "request": {
      "description": "An estimate request",
      "properties": {
        "task_request": { "$ref": "task_request.json" },
        "state": {"$ref": "#/$defs/state"}
      },
      "required": ["task_request"]
    },

    "state": {
      "description": "State of the robot",
      "type": "object",
      "properties": {
        "waypoint": {
          "description": "RMF navigation graph waypoint index",
          "type": "integer"
        },
        "orientation": {
          "description": "Orientation of the robot in radians.",
          "type": "number"
        },
        "battery_soc": {
          "description": "Battery percentage of the robot.",
          "type": "number"
        },
        "time": {
          "description": "Unix time from epoch in milliseconds.",
          "type": "integer"
        }
      },
      "required": ["waypoint", "orientation", "battery_soc"]
    }
  }
}
